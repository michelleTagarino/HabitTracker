<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#8be2ff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/habit_text_view"
        android:id="@+id/habitTitle"
        android:textSize="109dp"
        android:textStyle="bold"
        android:visibility="visible"
        android:textIsSelectable="false"
        android:textColor="#ffffff"
        android:typeface="monospace"
        android:layout_above="@+id/trackerTitle"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tacker_text_view"
        android:id="@+id/trackerTitle"
        android:textColor="#ffffff"
        android:textSize="78dp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:layout_marginBottom="70dp"
        android:layout_above="@+id/viewHabitsButton"
        android:layout_alignStart="@+id/habitTitle" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewHabitsButton"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:text="@string/view_habits_button_text"
        android:background="#000000" />

</RelativeLayout>